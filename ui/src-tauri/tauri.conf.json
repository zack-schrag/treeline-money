{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Treeline",
  "version": "0.1.34",
  "identifier": "com.treeline.money",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Treeline",
        "width": 1600,
        "height": 1200,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$HOME/.treeline/plugins/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/tl"],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVERUMwNjBBOERFRjcwRDYKUldUV2NPK05DZ2JzWFk4ekxvOFBsb0tNVkg0N3V4ank3Q3FLdHp0Qk9FTjltREZCTk1zTzN3THcK",
      "endpoints": [
        "https://github.com/zack-schrag/treeline-money/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
